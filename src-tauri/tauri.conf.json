{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build:ui",
    "beforeDevCommand": "npm run dev:ui",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Dark Souls Keeper",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "path": {
        "all": true
      },
      "fs": {
        "all": false,
        "copyFile": true,
        "createDir": true,
        "exists": true,
        "readDir": true,
        "readFile": true,
        "removeDir": true,
        "removeFile": true,
        "renameFile": false,
        "scope": ["$DATA/**/*"],
        "writeFile": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Game",
      "copyright": "Built by Gu-Miao using tauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.tauri.dark-souls-keeper",
      "longDescription": "An archive manager for Dark Souls III",
      "shortDescription": "An archive manager for Dark Souls III",
      "targets": "msi",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256"
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "title": "Dark Souls Keeper",
        "minWidth": 800,
        "minHeight": 640,
        "resizable": true,
        "center": true
      }
    ]
  }
}
